<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/friendcircle_comment_root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:onClick="onClick"
    android:orientation="vertical"
    android:padding="2dp" >

    <TextView
        android:id="@+id/share_mycontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:textColorHighlight="@color/grey3"
        android:textSize="14dp" />

    <RelativeLayout
        android:id="@+id/share_rl"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#f0f1f2"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <ImageView
            android:id="@+id/share_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/icon_group_small"
            />

        <TextView
            android:id="@+id/share_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/share_icon"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="12dp"  />
    </RelativeLayout>

</LinearLayout>