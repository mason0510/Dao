<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_light_gray"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="12.0dip"
    android:paddingLeft="18.0dip"
    android:paddingRight="18.0dip"
    android:paddingTop="12.0dip" >

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0" >

        <TextView
            android:id="@+id/section_flag_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_label" />

        <TextView
            android:id="@+id/error_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/font_red"
            android:textSize="@dimen/font_label"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/section_flag_tips_icon"
        android:layout_width="12.0dip"
        android:layout_height="fill_parent"
        android:src="@drawable/job_title_flag_tip"
        android:visibility="gone" />

    <TextView
        android:id="@+id/section_flag_tips_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        android:singleLine="true"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/font_small" />

</LinearLayout>