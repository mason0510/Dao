<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refreshPB"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical"
    android:visibility="gone" >

    <ProgressBar
        style="@android:style/Widget.ProgressBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        android:indeterminateDrawable="@drawable/page_progressbar_bg" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tipCount"
            style="@style/ts12_black_ww_wh"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tipWhen"
            style="@style/ts10_black_ww_wh"
            android:layout_below="@id/tipCount"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"/>
    </RelativeLayout>

</LinearLayout>