<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content">
	<RelativeLayout android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingTop="11dp"
	    android:paddingRight="11dp">
	    <TextView android:id="@+id/cancleable_textview_TV"
			style="@style/ts18_black_ww_mh"
			android:minHeight="20dp"
			android:paddingTop="6dp"
			android:paddingBottom="6dp"
			android:paddingLeft="6dp"
			android:paddingRight="6dp"
			android:background="@drawable/textview_solidborder"
			android:layout_alignParentBottom="true"
			android:layout_alignParentLeft="true"
			android:gravity="left|center_vertical"
			/>
	</RelativeLayout>
	<ImageView android:id="@+id/cancleable_textview_IV"
		android:background="@drawable/reddelete"
		android:layout_width="24dp"
		android:layout_height="24dp" 
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"
		/>
</RelativeLayout>