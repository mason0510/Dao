<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="center" >
        
	<ImageView
		android:id="@+id/message_talkpic_image"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:minHeight="80dp" android:minWidth="80dp"
		android:maxHeight="150dp" android:maxWidth="150dp"
		android:adjustViewBounds="true"
		android:scaleType="fitCenter"
		android:layout_gravity="center"/>
		
	<TextView
		android:id="@+id/talkpic_replay"
		style="@style/ts16_white_ww_wh"
		android:layout_gravity="center"
		android:gravity="center"
		android:drawablePadding="5.0dip"
		android:text="5s"
		android:drawableRight="@drawable/publisher_replay_icon"
		android:singleLine="true"/>
</FrameLayout>