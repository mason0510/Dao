<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:oncon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <com.lz.oncon.widget.TitleView
        android:id="@+id/loc_offline_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        oncon:centerValue="@string/portocal"
        oncon:leftImageSrc="@drawable/ic_back" />
    <ScrollView 
         android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	<TextView
	    android:id="@+id/display_txt"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1" 
	    />
	</ScrollView>
</LinearLayout>
