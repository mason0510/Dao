<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="140dp"
    android:orientation="horizontal">
    <View android:layout_width="10dp" android:layout_height="140dp"/>
<LinearLayout 
    android:id="@+id/itemLL"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="#35c5c5c5"
    android:orientation="vertical"
    android:paddingBottom="3dp"
    android:paddingTop="3dp" >
    
    <RelativeLayout 
        android:id="@+id/view_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <View android:layout_height="50dp" android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"/>
        
        <ImageView
        	android:id="@+id/view"
        	android:layout_width="match_parent"
        	android:layout_height="100dp"
        	android:layout_marginLeft="15dp"
        	android:layout_marginRight="15dp"
        	android:scaleType="fitXY"
        	android:src="@drawable/defaultpic"/>
        
        <com.lz.oncon.widget.HeadImageView
            android:id="@+id/avatar"
            android:layout_width="50dp"
            android:layout_height="50dp" 
            android:src="@drawable/avatar_img_loading"
            android:layout_alignBottom="@id/view"
            android:layout_marginLeft="8dp"/>
        
        <TextView
			android:id="@+id/name"
		    style="@style/ts12_black_ww_wh"
		    android:layout_below="@id/avatar" android:layout_marginTop="5dp"
		    android:layout_alignLeft="@id/avatar" android:layout_alignRight="@id/avatar"
		    android:gravity="center"
		    android:text="小熊"/>

        <ImageView
            android:id="@+id/recommand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/view" android:layout_marginTop="-4dp"
            android:layout_alignRight="@id/view" android:layout_marginRight="-3dp"
            android:src="@drawable/ic_recommand_jian"
            android:visibility="visible" />
		<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@id/view"
	        android:layout_toRightOf="@+id/avatar"
	        android:layout_alignRight="@id/view"
	        android:orientation="horizontal"
	        android:background="#7F000000" 
	        >
			<ImageView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:src="@drawable/ic_juli_white"
			    android:layout_marginLeft="20dp" 
			    />
	 		<TextView
	            android:id="@+id/distance"
	            android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
	            android:singleLine="true"
	            android:layout_marginLeft="3dp"
	            android:text="689m"
	            style="@style/ts16_white"
	            />
	 		<ImageView
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:src="@drawable/ic_watcher_white" />

	        <TextView
	            android:id="@+id/watch"
	            android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
	            android:singleLine="true"
	            android:layout_weight="1"
	            style="@style/ts16_white"
	            android:layout_marginLeft="3dp"
	            android:text="354(12)" />
	        
			<TextView
			    android:id="@+id/time"
			    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:layout_marginRight="5dp"
	 		    style="@style/ts16_white"
	 		    android:text="12:30"
	 		    
	 		    />
	       
	    </LinearLayout>

		<LinearLayout android:layout_width="match_parent" android:layout_height="40dp"
	        android:orientation="vertical"
	        android:layout_alignParentBottom="true"
	        android:paddingTop="5dp" android:paddingBottom="5dp"
	        android:gravity="center_horizontal">
	        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
	            android:orientation="horizontal">
	            
	            <TextView
			        android:id="@+id/live"
			        style="@style/ts12_black_ww_wh"
			        android:singleLine="true"
			        android:layout_marginLeft="10dp"
			        android:text="正在直播"/>
	            <TextView
			        android:id="@id/title"
			        style="@style/ts12_black_ww_wh"
			        android:singleLine="true"
			        android:layout_marginLeft="10dp"
			        android:text="教你做好吃的手撕鸡吧"/>
	        </LinearLayout>
	    </LinearLayout>
    </RelativeLayout>
</LinearLayout>
<View android:layout_width="10dp" android:layout_height="140dp"/>
</LinearLayout>