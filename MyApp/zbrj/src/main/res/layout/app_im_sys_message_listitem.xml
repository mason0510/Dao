<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content" 
    android:orientation="vertical" android:background="@color/gray">
	<RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
		style="@style/im_sys_message_listitem_bg_top">
		<TextView android:id="@+id/im_sys_msg_type_label"
		    style="@style/ts15_grey_ww_wh"
	        android:text="@string/group_sys_msg"/>
		<TextView android:id="@+id/im_sys_msg_time_label"
		    style="@style/ts12_grey_ww_wh"
	        android:layout_alignParentRight="true" android:layout_centerVertical="true"
	        android:text="2013/9/19 20:13"/>
	</RelativeLayout>
	<RelativeLayout android:id="@+id/app_im_sys_message_listitem_bottom" 
	    android:layout_width="fill_parent" android:layout_height="wrap_content"
		style="@style/im_sys_message_listitem_bg_bottom">
	    <ImageView android:id="@+id/im_sys_msg_icon_view"
	    	android:layout_height="wrap_content" android:layout_width="wrap_content"
	        android:src="@drawable/head_mygroup"
	        android:layout_centerVertical="true"/>
	    <TextView android:id="@+id/im_sys_msg_result"
	        style="@style/ts14_black_ww_wh"
	        android:layout_centerVertical="true" android:gravity="center"
			android:text="@string/audit_pass" android:background="@drawable/app_im_sys_message_listitem_btn"
			android:layout_marginLeft="5dp" android:layout_alignParentRight="true"/>
		<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_toRightOf="@id/im_sys_msg_icon_view"
			android:layout_toLeftOf="@id/im_sys_msg_result"
			android:orientation="vertical" android:layout_centerVertical="true"
			android:layout_marginLeft="5dp">
	        <TextView android:id="@+id/im_sys_msg_name" style="@style/ts14_black_mw_wh"
	            android:text="直播日记业务"/>
	        <TextView android:id="@+id/im_sys_msg_form" style="@style/ts12_black_mw_wh"
	            android:text="18701637882 申请加入该圈子"
	            android:layout_marginTop="3dp"/>
	        <TextView android:id="@+id/im_sys_msg_reason" style="@style/ts12_black_mw_wh"
	            android:text="我是wangzhuoa"
	            android:layout_marginTop="3dp"/>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>