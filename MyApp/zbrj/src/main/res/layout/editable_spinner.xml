<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="50dp">
	<EditText android:id="@+id/editable_spinner_ET"
		android:saveEnabled="true"
		style="@style/ts16_black_mw_mh"
		android:background="@null"
		android:singleLine="true"
		android:imeOptions="actionDone"
		android:textColorHint="#b3b3b3"
		android:inputType="phone" android:digits="1234567890"
		/>
	<ImageView android:id="@+id/editable_spinner_IV_del"
		android:src="@drawable/error"
		android:layout_width="wrap_content"
		android:layout_height="match_parent" 
		android:layout_marginRight="5dp" android:paddingLeft="8dp"
		android:layout_toLeftOf="@+id/editable_spinner_IV"/>
	<ImageView android:id="@+id/editable_spinner_IV"
		android:src="@drawable/spinner"
		android:layout_width="wrap_content"
		android:layout_height="match_parent" 
		android:layout_alignRight="@id/editable_spinner_ET"/>
</RelativeLayout>