<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:paddingBottom="4dip"
    android:paddingLeft="4dip"
    android:paddingRight="4dip"
    android:paddingTop="4dip" >

    <TextView android:id="@+id/im_message_listitem_TextView_time"
        style="@style/ts13_white_ww_wh"
		android:layout_gravity="center_horizontal" 
		android:background="@drawable/graybg" 
		android:paddingBottom="1dip" android:paddingTop="1dip"
        android:paddingLeft="10dip" android:paddingRight="10dip"/>

    <LinearLayout
        android:id="@+id/im_message_listitem_Layout_messagebg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="8dip" 
        android:layout_marginTop="8dip">

        <com.lz.oncon.app.im.ui.view.MsgRoundAngleImageView
			android:id="@+id/im_message_listitem_lefthead"
            android:layout_width="44dp" android:layout_height="44dp"
			android:adjustViewBounds="true"
            android:maxHeight="50dip" android:maxWidth="50dip"
            android:scaleType="fitXY" android:visibility="gone" 
            android:layout_marginLeft="10dp"/>
        
		<ImageView android:id="@+id/im_message_listitem_status"
				android:layout_width="20dip" android:layout_height="20dip"
				android:layout_gravity="center_vertical"
				android:src="@drawable/ic_msg_error"
				android:visibility="gone" />
		<ProgressBar android:id="@+id/im_message_listitem_loadingstatus"
				style="?android:attr/progressBarStyleSmallTitle"
			    android:layout_width="22dip" android:layout_height="22dip"
				android:layout_gravity="center"
			    android:visibility="gone" />
	    <LinearLayout android:id="@+id/im_message_listitem_msg"
	            style="@style/ts15_black_ww_wh"
			    android:layout_marginLeft="7dip" android:layout_marginRight="7dip"
			    android:gravity="center"
			    android:orientation="vertical"/>
        
        <com.lz.oncon.app.im.ui.view.MsgRoundAngleImageView
        	android:id="@+id/im_message_listitem_righthead"
        	android:layout_width="44dip" android:layout_height="44dip"
        	android:adjustViewBounds="true"
        	android:maxHeight="50dip" android:maxWidth="50dip"
           	android:scaleType="fitXY" android:visibility="gone" 
           	android:layout_marginRight="15dp"/>
    </LinearLayout>
</LinearLayout>