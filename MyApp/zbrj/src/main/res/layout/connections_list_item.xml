<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_connections_item"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/connections_list_item_avatar_layout"
        android:layout_width="@dimen/height_avatar_normal"
            android:layout_height="@dimen/height_avatar_normal"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_margin="12.0dip" >

        <ImageView
            android:id="@+id/connections_list_item_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:src="@drawable/avatar_img_loading"/>
        <TextView
                android:id="@+id/connections_list_item_avatar_tv"
                android:layout_width="@dimen/height_avatar_normal"
                android:layout_height="@dimen/height_avatar_normal"
                android:textSize="48sp"
                android:textColor="#9EA3A7"
                android:gravity="center"
                android:includeFontPadding="false"
                android:background="#F6F6F6"
                android:visibility="gone"
                 />
    </RelativeLayout>

    <View
        android:id="@+id/del"
        android:layout_width="24.0dip"
        android:layout_height="24.0dip"
        android:layout_margin="4.0dip"
        android:background="@drawable/del_avatar_icon"
        android:visibility="gone" />

    <TextView
        android:id="@+id/connections_list_item_top_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12.0dip"
        android:layout_toRightOf="@id/connections_list_item_avatar_layout"
        android:singleLine="true"
        android:textColor="@color/font_content"
        android:textSize="@dimen/font_large" 
        android:text="教你做好吃的手撕鸡吧"/>

    <TextView
        android:id="@+id/connections_list_item_top_right_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/connections_list_item_top_txt"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="24.0dip"
        android:layout_toRightOf="@id/connections_list_item_top_txt"
        android:gravity="bottom|right|center"
        android:singleLine="true"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/font_normal" />

    <ImageView
        android:id="@+id/connections_list_item_group_owner"
        android:layout_width="36.0dip"
        android:layout_height="18.0dip"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="13.0dip"
        android:layout_toRightOf="@id/connections_list_item_top_txt"
        android:visibility="gone" />

    <TextView
        android:id="@+id/connections_list_item_middle_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/connections_list_item_top_txt"
        android:layout_toLeftOf="@+id/connections_list_item_middle_right_txt"
        android:layout_toRightOf="@id/connections_list_item_avatar_layout"
        android:gravity="center_vertical"
        android:lineSpacingExtra="@dimen/line_space_normal"
        android:paddingTop="@dimen/line_space_normal"
        android:singleLine="true"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/font_small" />

    <TextView
        android:id="@+id/connections_list_item_middle_right_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/connections_list_item_top_right_txt"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="12.0dip"
        android:gravity="center_vertical"
        android:lineSpacingExtra="@dimen/line_space_normal"
        android:maxWidth="148.0dip"
        android:paddingTop="@dimen/line_space_normal"
        android:singleLine="true"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/font_small" />

    <TextView
        android:id="@+id/connections_list_item_bottom_txt"
        android:layout_width="fill_parent"
        android:layout_height="30.0dip"
        android:layout_below="@id/connections_list_item_middle_txt"
        android:layout_toLeftOf="@+id/connections_list_item_bottom_right_txt"
        android:layout_toRightOf="@id/connections_list_item_avatar_layout"
        android:gravity="top"
        android:paddingTop="@dimen/line_space_normal"
        android:singleLine="true"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/font_small" />

    <TextView
        android:id="@+id/connections_list_item_bottom_right_txt"
        android:layout_width="wrap_content"
        android:layout_height="30.0dip"
        android:layout_alignParentRight="true"
        android:layout_below="@id/connections_list_item_middle_txt"
        android:layout_marginLeft="8.0dip"
        android:gravity="top"
        android:maxWidth="160.0dip"
        android:paddingTop="@dimen/line_space_normal"
        android:singleLine="true"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/font_small" />

    <ImageView
        android:id="@+id/connections_list_item_relation"
        android:layout_width="35.0dip"
        android:layout_height="35.0dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>