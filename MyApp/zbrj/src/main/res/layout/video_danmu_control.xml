<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:background="@android:color/transparent">

    <EditText
        android:id="@+id/msg_input"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:singleLine="true"
       	android:visibility="gone"
        android:ems="10" >
        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/send_danmu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/startRecorder"
        android:layout_alignBottom="@+id/startRecorder"
        android:layout_alignRight="@+id/msg_input"
        android:visibility="gone"
        android:text="@string/video_send" />

    <Button
        android:id="@+id/startRecorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="108dp"
        android:text="开播" />
    
</RelativeLayout>
