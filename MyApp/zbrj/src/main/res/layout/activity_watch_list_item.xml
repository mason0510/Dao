<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="70dp"
    android:orientation="horizontal">
    <View android:layout_width="10dp" android:layout_height="70dp"/>
<LinearLayout 
    android:id="@+id/itemLL"
    android:layout_width="fill_parent" android:layout_height="70dp"
    android:layout_weight="1"
    android:background="#15c5c5c5"
    android:orientation="horizontal" 
    android:paddingTop="3dp" android:paddingBottom="3dp">

    <RelativeLayout
        android:id="@+id/avatar_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
  		<TextView
            android:id="@+id/name"
            style="@style/ts12_black_ww_wh"
            android:background="#23000000"
            android:layout_width="90dip"
            android:layout_height="30dip"
            android:paddingBottom="3dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal|bottom"
            android:text="白玫瑰" />
        <com.lz.oncon.widget.HeadImageView
            android:id="@+id/avatar"
            android:layout_width="45dp"
            android:layout_height="45dp" 
            android:src="@drawable/avatar_img_loading"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            />
    </RelativeLayout>
    
    <LinearLayout 
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
		android:orientation="vertical">
        <TextView
	        android:id="@id/title"
	        android:gravity="center_vertical"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:singleLine="true"
	        android:textColor="@color/font_content"
	        android:textSize="14dp" 
	        android:text="教你做好吃的手撕鸡吧"/>
        <TextView 
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="21:30"
            />
        <LinearLayout android:id="@+id/other_layout"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-3dp"
                android:src="@drawable/ic_juli_black" />

	         <TextView
		        android:id="@+id/distance"
		        style="@style/ts12_black_ww_wh"
		        android:layout_marginLeft="-3dp"
		        android:singleLine="true" 
		        android:text="689m"/>

	         <ImageView
	             android:id="@+id/imageView2"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:layout_marginLeft="10dp"
	             android:src="@drawable/ic_watcher_black" />

	        <TextView
		        android:id="@+id/watch"
		        style="@style/ts12_black_ww_wh"
		        android:layout_marginLeft="-2dp"
		        android:singleLine="true" 
		        android:text="354(12)"/>
	    </LinearLayout>
    </LinearLayout>
    
    <RelativeLayout 
        android:id="@+id/view_layout"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
		android:layout_marginLeft="5dp"
		android:layout_gravity="center_vertical">
        <ImageView
        	android:id="@+id/view"
        	android:layout_width="80dp"
        	android:layout_height="50dp"
        	android:scaleType="fitXY"
        	android:src="@drawable/defaultpic"/>

        <ImageView
            android:id="@+id/recommand"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="-5dp" android:layout_marginRight="-5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_recommand_jian" />

    </RelativeLayout>
    <TextView
		android:id="@+id/live"
		style="@style/ts12_black_ww_wh"
		android:singleLine="true"
		android:layout_marginLeft="10dp"
		android:text="正在直播"
		android:visibility="gone"/>
</LinearLayout>
<View android:layout_width="10dp" android:layout_height="70dp"/>
</LinearLayout>