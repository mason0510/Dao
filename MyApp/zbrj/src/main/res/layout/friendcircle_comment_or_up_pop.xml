<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/fc_comment_up_pop_up"
        android:layout_width="0dip"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/fc_comment_up_bg"
        android:gravity="center" >

        <TextView
            android:id="@+id/fc_comment_up_pop_up_tv"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:drawableLeft="@drawable/fc_up_selector"
            android:gravity="center"
            android:text="@string/fc_up"
             android:textSize="16dp"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fc_comment_up_pop_comment"
        android:layout_width="0dip"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/fc_comment_up_bg"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:drawableLeft="@drawable/fc_comment_selector"
            android:gravity="center"
            android:text="@string/fc_comment"
            android:textSize="16dp"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>