<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:oncon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.lz.oncon.widget.TitleView
        android:id="@id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        oncon:centerValue=""
        oncon:leftImageSrc="@drawable/ic_back"
        oncon:rightValue="@string/fc_comment_send" />

    <EditText
        android:id="@+id/friendcircle_sendimgtxt_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="6dip"
        android:layout_marginRight="6dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/msg_input"
        android:gravity="center_vertical"
        android:hint="@string/fc_moment_to_say"
        android:maxHeight="200dip"
        android:paddingLeft="3dip"
        android:paddingRight="3dip"
        android:textColor="#000000"
        android:textSize="16dp" />

</LinearLayout>