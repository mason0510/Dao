<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="63dip" android:layout_height="99dip">

    <ImageView android:id="@+id/bg" 
        android:layout_width="55dp" android:layout_height="55dp" 
        android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"
        android:background="#B0222222"/>
    
	<LinearLayout android:layout_width="55dip" android:layout_height="55dip"
		android:layout_marginBottom="8dp" android:layout_marginTop="8dp"
		android:orientation="vertical"
		android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"
		android:padding="2dip" >

        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
			<ImageView android:id="@+id/iv1"
				android:layout_width="23dip" android:layout_height="23dip" 
                android:adjustViewBounds="true" android:scaleType="fitXY"/>
            <ImageView android:id="@+id/iv2"
                android:layout_width="23dip" android:layout_height="23dip"
                android:adjustViewBounds="true" android:scaleType="fitXY"
                android:layout_marginLeft="1dip" />
		</LinearLayout>

		<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginTop="1dip" >
            <ImageView android:id="@+id/iv3"
            	android:layout_width="23dip" android:layout_height="23dip"
                android:adjustViewBounds="true" android:scaleType="fitXY" />
			<ImageVie android:id="@+id/iv4"
                android:layout_width="23dip" android:layout_height="23dip"
                android:adjustViewBounds="true" android:scaleType="fitXY"
                android:layout_marginLeft="1dip" />
		</LinearLayout>
	</LinearLayout>
    <TextView android:id="@+id/noti"
        style="@style/ts12_white_ww_wh"
        android:gravity="center" android:visibility="gone"/>
    <TextView android:id="@+id/name" 
        style="@style/ts14_black_58w_28h"
		android:layout_alignParentBottom="true" android:gravity="center_horizontal" 
		android:singleLine="true" android:ellipsize="end" android:maxLength="4" android:paddingBottom="3dp"/>
</RelativeLayout>