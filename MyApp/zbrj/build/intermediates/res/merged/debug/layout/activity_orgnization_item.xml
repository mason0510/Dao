<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:oncon="http://schemas.android.com/apk/res-auto"
	android:layout_width="fill_parent"
	android:layout_height="44dip"
	android:background="@drawable/im_thread_list_item_bg">
	
    <LinearLayout android:id="@+id/head_LL" android:layout_width="45dp" android:layout_height="45dp"
        android:layout_marginBottom="10dp" android:layout_marginTop="10dp" android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true" android:layout_centerVertical="true">
        <ImageView android:id="@+id/head" android:layout_width="40dp" android:layout_height="40dp" 
            android:layout_gravity="center_vertical" android:visibility="gone"/>
        <LinearLayout android:id="@+id/im_thread_listitem_grouphead"
			android:layout_width="40dip" android:layout_height="40dip"
			android:layout_marginBottom="10dp" android:layout_marginTop="10dp"
			android:background="@drawable/grouprenbg" android:orientation="vertical"
			android:padding="2dip" android:visibility="gone">
	
			<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" >
				<com.lz.oncon.widget.HeadImageView android:id="@+id/im_thread_listitem_head1"  android:layout_width="20dip" android:layout_height="22dip" oncon:roundWidth="2dp" oncon:roundHeight="2dp" android:adjustViewBounds="true" android:scaleType="fitXY"/>
				<com.lz.oncon.widget.HeadImageView android:id="@+id/im_thread_listitem_head2" android:layout_width="20dip" android:layout_height="22dip" android:layout_marginLeft="1dip" oncon:roundWidth="2dp" oncon:roundHeight="2dp" android:adjustViewBounds="true" android:scaleType="fitXY"/>
			</LinearLayout>
		
			<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginTop="1dip" >
				<com.lz.oncon.widget.HeadImageView android:id="@+id/im_thread_listitem_head3" android:layout_width="20dip" android:layout_height="22dip" oncon:roundWidth="2dp" oncon:roundHeight="2dp" android:adjustViewBounds="true" android:scaleType="fitXY"/>
				<com.lz.oncon.widget.HeadImageView android:id="@+id/im_thread_listitem_head4" android:layout_width="20dip" android:layout_height="22dip" android:layout_marginLeft="1dip" oncon:roundWidth="2dp" oncon:roundHeight="2dp" android:adjustViewBounds="true" android:scaleType="fitXY"/>
			</LinearLayout>
		</LinearLayout>
    </LinearLayout>
    
	<ImageView android:id="@+id/imageview"
	    android:layout_width="wrap_content" android:layout_height="44dip" 
	    android:layout_centerVertical="true" android:layout_alignParentRight="true" 
	    android:src="@drawable/left"
		android:layout_marginRight="10dip"
		android:visibility="gone" />
	<!-- TextView  android:id="@+id/textviewCount"
	    android:layout_toLeftOf="@id/imageview" 
	    style="@style/ts16_black_white_ww_44h"
	    android:layout_centerVertical="true"
		android:layout_marginRight="10dip" 
		android:gravity="center_vertical"/ -->
	 <TextView android:id="@+id/org_name" 
	    style="@style/ts16_black_white_ww_44h"
	    android:layout_centerVertical="true" 
		android:gravity="center_vertical"
		android:layout_marginRight="5dip"
		android:padding="3dp" 
		android:singleLine="true"
		android:paddingRight="50dp"
		android:layout_toRightOf="@id/head_LL"
		/>
		
		<TextView android:id="@+id/new_attention_amount" 
		    style="@style/ts14_white_ww_wh"
			android:layout_centerVertical="true" 
			android:gravity="center" 
			android:layout_toLeftOf="@id/imageview"
			android:layout_marginRight="10dip"
			android:visibility="invisible"
			/>


</RelativeLayout>
