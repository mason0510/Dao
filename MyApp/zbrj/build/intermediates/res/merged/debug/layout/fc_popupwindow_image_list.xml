<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp" >

    <ImageView
        android:id="@+id/image_bucket"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:adjustViewBounds="true"
        android:background="@drawable/fc_select_defalt"
        android:scaleType="fitXY" >
    </ImageView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/isselected"
        android:layout_toRightOf="@+id/image_bucket"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/image_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="所有图片"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/image_list_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="256张"
            android:textSize="18dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/isselected"
        android:layout_width="26dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_margin="3dp"
        android:src="@drawable/fc_no_select_image" />

</RelativeLayout>