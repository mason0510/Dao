<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:oncon="http://schemas.android.com/apk/res-auto"
    android:id="@+id/domain_classfromdate_item_root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/im_thread_list_item_bg"
    android:orientation="horizontal"
    android:padding="2dip"
     >

    <RelativeLayout
        android:id="@+id/domain_image_txt_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/head_ll_image_text"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/first_image_ll"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="5dip"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/first_image1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/defaultpic" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/two_image_ll"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="5dip"
                android:orientation="horizontal"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/two_image1"
                        android:layout_width="35dip"
                        android:layout_height="70dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/defaultpic" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/two_image2"
                        android:layout_width="35dip"
                        android:layout_height="70dp"
                        android:layout_marginLeft="1dip"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/defaultpic" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/three_image_ll"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dip"
                android:orientation="horizontal"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/three_image1"
                        android:layout_width="35dip"
                        android:layout_height="70dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/defaultpic" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/three_image2"
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:layout_marginLeft="1dip"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/defaultpic" />

                    <ImageView
                        android:id="@+id/three_image3"
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:layout_marginLeft="1dip"
                        android:layout_marginTop="1dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/defaultpic" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/four_image_ll"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="5dip"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/four_image1"
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/defaultpic" />

                    <ImageView
                        android:id="@+id/four_image2"
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:layout_marginLeft="1dip"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/defaultpic" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dip"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/four_image3"
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/defaultpic" />

                    <ImageView
                        android:id="@+id/four_image4"
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:layout_marginLeft="1dip"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/defaultpic" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@+id/head_ll_image_text"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/domain_image_tv_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxHeight="70dp"
                android:maxLines="3"
                android:minHeight="20dp"
                android:textSize="14dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/domain_image_num"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/head_ll_image_text"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/head_ll_image_text"
            android:textSize="12dp"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/domain_txt_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:background="#f0f1f2"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/domain_tv_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:textSize="14dp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>