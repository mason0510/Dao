<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView android:id="@+id/message_image_image"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:minHeight="80dp" android:minWidth="80dp"
		android:maxHeight="220dp" android:maxWidth="220dp"
		android:adjustViewBounds="true"
		android:scaleType="fitCenter"/>
	
    <TextView android:id="@+id/message_image_text"
        style="@style/ts12_black_ww_wh"
		android:layout_gravity="bottom" android:singleLine="true"/>
</LinearLayout>