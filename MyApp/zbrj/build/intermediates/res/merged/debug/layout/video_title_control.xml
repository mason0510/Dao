<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">

<RelativeLayout
    android:id="@+id/layout_title"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:background="@color/video_control_start_color"
    android:gravity="top"
    android:visibility="visible" >

    <ImageView
        android:id="@+id/video_btn_control_back"
        android:layout_width="39dp"
        android:layout_height="26dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
         android:layout_marginLeft="15dp"
        android:padding="3dp"
        android:src="@drawable/ic_back" />

    <ImageView
        android:id="@+id/video_control_share"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:padding="2.5dp"
        android:src="@drawable/btn_video_share" 
        android:visibility="visible"/>

    <TextView
        android:id="@+id/video_control_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="直播标题"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/video_control_reporting"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/video_control_share"
        android:src="@drawable/ic_report"
        android:visibility="gone" />

</RelativeLayout>

 <LinearLayout
     android:id="@+id/video_control_reporting_layout"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentRight="true"
     android:layout_below="@+id/layout_title"
     android:layout_marginRight="65dp"
     android:background="@color/video_menu_background"
     android:orientation="vertical"
     android:padding="5dp"
     android:visibility="gone" >

     <TextView
         android:id="@+id/video_btn_report_politics"
         style="@style/video_player_btn_land"
         android:text="@string/video_btn_reporting_politics" />

     <TextView
         android:id="@+id/video_btn_report_porn"
         style="@style/video_player_btn_land"
          android:layout_marginTop="5dp"
         android:text="@string/video_btn_reporting_porn" />

     <TextView
         android:id="@+id/video_btn_reporting_advert"
         style="@style/video_player_btn_land"
          android:layout_marginTop="5dp"
         android:text="@string/video_btn_reporting_advert" />

     <TextView
         android:id="@+id/video_btn_report_other"
         style="@style/video_player_btn_land"
          android:layout_marginTop="5dp"
         android:text="@string/video_btn_reporting_other" />
 </LinearLayout>

 </RelativeLayout>
