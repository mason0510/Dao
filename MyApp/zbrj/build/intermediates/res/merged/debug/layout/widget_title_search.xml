<?xml version="1.0" encoding="utf-8"?>
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent" android:layout_height="50dp" 
	    android:background="@drawable/common_title_bg"
	    android:id="@+id/common_title_RL">
    	<TextView
    		android:id="@+id/common_title_TV_left"  
    		style="@style/common_title_IV_left"
    		android:layout_marginTop="2dp" android:layout_marginBottom="2dp"
    		android:layout_centerVertical="true" android:layout_alignParentLeft="true"
    		android:clickable="true" android:onClick="onClick"
    		/>
    	
    	<TextView
    		android:id="@+id/common_title_TV_right"  
    		style="@style/common_title_TV_right"
    		android:layout_marginTop="2dp" android:layout_marginBottom="2dp" android:layout_marginRight="8dp"
    		android:layout_centerVertical="true" android:layout_alignParentRight="true"
    		android:clickable="true" android:onClick="onClick"
    		/>

		<com.lz.oncon.widget.TitleSearchBar
		    android:id="@+id/common_title_TV_search"
		    style="@style/common_title_TV_center"
		    android:layout_width="match_parent"
		    android:layout_toRightOf="@id/common_title_TV_left"
		    android:layout_toLeftOf="@id/common_title_TV_right"
		    android:layout_centerVertical="true"
		    android:layout_marginTop="3dp" android:layout_marginBottom="3dp" android:layout_marginRight="10dp"
		    android:ellipsize="middle"
		    android:singleLine="true" />
	</RelativeLayout>