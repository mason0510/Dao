<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <RelativeLayout
        android:id="@+id/speak_horizontial"
        android:layout_width="80dip"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:layout_height="wrap_content" 
        android:orientation="vertical"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/message_class_speak"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/chatting_biaoqing_btn_enable" />

        <TextView
            android:id="@+id/image_speak_des"
            style="@style/ts12_black_mw_wh"
            android:layout_below="@id/message_class_speak"
            android:gravity="center"
            android:text="ffffffffff" 
            android:singleLine="true">
        </TextView>
    </RelativeLayout>
    

</LinearLayout>