<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="50dp"
    android:orientation="horizontal">

    <ImageView android:id="@+id/message_file_image"
		android:layout_width="35dp" android:layout_height="35dp"
		android:layout_gravity="center_vertical"
		android:layout_marginLeft="5dp"/>
    
    <RelativeLayout android:layout_width="100dp" android:layout_height="wrap_content"
        android:minHeight="50dp"
	    android:padding="5dp">
	    <TextView android:id="@+id/message_file_name"
	        style="@style/ts12_black_mw_wh"/>
	    
	    <TextView android:id="@+id/message_file_size"
	        style="@style/ts12_black_mw_wh" 
	        android:layout_below="@id/message_file_name"
			android:layout_marginTop="3dp"
			android:layout_alignParentBottom="true"/>
	</RelativeLayout>
	<ImageView android:id="@+id/message_file_image2" 
	    android:layout_gravity="center_vertical"
		android:layout_width="35dp" android:layout_height="35dp"
		android:layout_marginRight="5dp"/>
</LinearLayout>