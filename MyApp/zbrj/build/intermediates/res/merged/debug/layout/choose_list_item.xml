<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

     <RelativeLayout
        android:id="@+id/indexLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/category_title_bg"
        android:paddingTop="3dip"
        android:paddingLeft="29dip"
        android:visibility="gone" 
         >

         <TextView
            android:id="@+id/text_first_char_hint"
            style="@style/ts16_black_ww_wh"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/im_thread_list_item_bg" 
        android:padding="5dp" >

        <ImageView
            android:id="@+id/addgroup_chooser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
             />

        <com.lz.oncon.widget.HeadImageView 
				android:id="@+id/addgroup_icon"
				android:layout_width="40dip" android:layout_height="40dip"
				android:layout_gravity="center"
				android:adjustViewBounds="true"
				android:scaleType="fitXY"
				android:maxWidth="40dip"
				android:maxHeight="40dip"
				android:src="@drawable/avatar_img_loading" 
				android:layout_toRightOf="@+id/addgroup_chooser" />

        <TextView
            android:id="@+id/content"
            style="@style/ts16_black_ww_wh"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/addgroup_icon"/>
    </RelativeLayout>

</LinearLayout>